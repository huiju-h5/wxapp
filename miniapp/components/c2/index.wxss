.toast {
  position: fixed;
  width: 400rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 24rpx;
  line-height: 40rpx;
  color: #fff;
  padding: 20rpx;
  z-index: 30;
  text-align: center;
}
.toast .bg {
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background: #333;
  opacity: 0.7;
  border-radius: 16rpx;
  z-index: -1;
}
.show {
  display: block;
}
.hide {
  display: none;
}
.clearfix:after {
  content: '.';
  display: block;
  clear: both;
  visibility: hidden;
  line-height: 0;
  height: 0;
  font-size: 0;
}
